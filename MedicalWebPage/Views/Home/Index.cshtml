@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a class="nav-link" href="/Identity/Account/Manage">Hello, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" action="/Identity/Account/Logout">
                <button class="nav-link btn btn-link" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <h1><a class="nav-link" href="/Identity/Account/Login">Sign in</a> to view your data!</h1>
    }
</div>
